            {% if app.user and app.request.cookies.get('mercureAuthorization') is null %}
                {# Set mercure cookies #}
                <script>
                    $(document).ready( function()
                    {
                        $.get("{{ path('conversation_cookie') }}", function()
                        {
                            // URL is a built-in JavaScript class to manipulate URLs
                            const url = new URL('http://127.0.0.1:3000/.well-known/mercure');

                            url.searchParams.append('topic', "http://127.0.0.1:8080/message/{id}");

                            const eventSource = new EventSource(url, { withCredentials: true });
                            eventSource.onmessage = event => {
                                var message = JSON.parse( event.data );
                                if( parseInt(message.unread) > 0 )
                                {
                                    $('.messages .unread').html(message.unread);
                                    $('.messages .unread').removeClass('d-none');
                                }
                            }
                        });
                    });
                </script>

