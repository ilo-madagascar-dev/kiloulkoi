{% extends 'base.html.twig' %}

{% block title %}Details annonces{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div id="bg" style="height:250px;"></div>

        <div class="row pt-3">
            <div class="col-md-6">
                <div class="card shadow mb-3">
                    <div class="card-header d-flex align-items-top">
                        <img src="{{ asset('image/img-add.png') }}" class="border border-success mr-2" alt="" style="height: 50px; height:50px; border-radius:50%;padding:3px;">
                        <div class="d-inline">
                            <h2 class="mb-0" style="font-size: 1.4rem;"><strong>{{ annonce.user.nom }} {{ annonce.user.prenom }}</strong></h2>
                            <small class="text-muted">5 annonces en lignes</small>
                        </div>
                    </div>
                    <div class="card-body">
                        <form action="">
                            <div class="form-group">
                                <label for="email">Votre email</label>
                                <input type="email" class="form-control" name="email" id="email" value="{{ app.user ? app.user.email }}" {{ app.user ? 'disabled' : '' }}>
                            </div>

                            <div class="form-group">
                                <label for="nom">Votre nom</label>
                                <input type="nom" class="form-control" name="nom" id="nom" value="{{ app.user ? app.user.nom ~ ' ' ~ app.user.prenom : '' }}" {{ app.user ? 'disabled' : '' }}>
                            </div>

                            <div class="form-group">
                                <label for="message">Votre message</label>
                                <textarea type="message" class="form-control" name="message" id="message" placeholder="Messages...." rows="3"></textarea>
                            </div>
                            <button class="btn btn-primary btn-block">Envoyer un message</button>
                        </form>
                    </div>
                </div>

                <div class="card shadow mb-3">
                    <div class="card-header d-flex align-items-center">
                        <i class="text-muted fa fa-image mr-3" style="font-size: 3rem;"></i>
                        <h2 class="mb-0 d-inline" style="font-size: 1.4rem;"><strong>Photos</strong></h2>
                    </div>
                    <div class="card-body" style="padding: 0;">

                        <div class="" style="height: 300px;">
                            <div id="carousel-photos" class="carousel slide h-100 overflow-hidden" data-ride="carousel">
                                <div class="carousel-inner rounded-bottom h-100 overflow-hidden d-flex align-items-center">
                                    {% for photo in annonce.photo %}
                                        <div class="carousel-item {{ loop.index == 1 ? 'active' : ''}}">
                                            <img src="{{ asset('uploads/') ~ photo.url }}" class="d-block w-100" alt="{{ photo.description }}">
                                            <div class="carousel-caption d-none d-md-block">
                                                <p>{{ photo.description }}</p>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                                <a class="carousel-control-prev" href="#carousel-photos" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carousel-photos" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card shadow mb-3">
                    <div class="card-header d-flex align-items-center">
                        <i class="text-muted fa fa-list mr-3" style="font-size: 3rem;"></i>
                        {% set detail_type = annonce.type == 'offre' ? 'de l\'offre' : 'de la demande'  %}
                        <h2 class="mb-0 d-inline" style="font-size: 1.4rem;"><strong>Détails {{ detail_type }}</strong></h2>
                    </div>
                    <div class="card-body">
                        <div>
                            <h3 class="text-success" style="font-size: 1.2rem;"><strong>{{ annonce.titre }}</strong></h3>
                            <p class="mb-0"><strong>Prix: </strong>{{ annonce.prix }} Euro</p>
                            <p class="text-muted">Le {{ annonce.dateModification | date("d/m/Y à H:m") }}</p>
                        </div>
                        <hr class="bg-secondary">
                        <div>
                            <h3 style="font-size: 1.2rem;"><strong>Déscriptions :</strong></h3>
                            <p class="mb-0">{{ annonce.description }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
