{% extends "base.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/style.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/responsive.css') }}" rel="stylesheet"/>
  
{% endblock %}


{% block title %}Annonces{% endblock %}
{% block body %}

<header>

   <div class="container-fluid">
                <div class="row"> 
                    <div id="ano" class="col-md-2">

                    </div>
                    <div id="head" class="col-md-8">
                        <center>

                              <span><img id="icone" src="icone/search.png"><label>Mes recherches</label></span>
                                <span><img id="icone" src="icone/star.png"><label>Favoris</label></span>
                                <span><img id="icone" src="icone/user.png"><label>User</label></span>
                        </center>
              
                    </div>
                </div>
       </div>

</header>


<div id="bg" >
      <div class="container">
        <div class="row">
          <div class="col-sm-4">
          </div>
          <div class="col-sm-4">
              <h1 class="align-content-center">Choisir la catégorie</h1>
          </div>
          <div class="col-sm-4">
          </div>
        </div>
      </div>
    <div class="container">
      <div class="row">
        <div class="col-sm-4">
        </div>
        <div class="col-sm-4">
                <div id="select" class="form-group">
              <select class="form-control" id="selectAnnonceType">
                  {% for categorie in categories %}
                      <option value="{{ categorie.className }}">{{ categorie.libelle }} </option>
                  {% endfor %}
              </select>
              </div>
            <div id="deposerAnnonce" class="btn btn-success" iduser="{{ app.user.id }}">
                Déposer une Annonces
            </div>
        </div>
        <div class="col-sm-4">
        </div>
      </div>


    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
            </div>
            <div class="col-sm-4">
                <h1 class="align-content-center">Liste Annonces</h1>
            </div>
            <div class="col-sm-4">
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            {% for annonce in annonces %}
                <div class="col-md-4">
                    <div class="content">
                        <img src="image/image1.png" alt="Nature" style="width:100%">
                        <h4>{{ annonce.titre }}</h4>
                        <div id="liste">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-12">
                                        <table style="width:100%">
                                            <tr>
                                                <td>description : {{ annonce.description }}</td>
                                            </tr>
                                            <tr>
                                                <td>Catégorie : {{ annonce.categorie.libelle }}</td>
                                            </tr>
                                            <tr>
                                                <td>Il y a 1h:30min</td>
                                                <td><a href="{{ path('location_new', {'idannonce': annonce.id}) }}">Louer</a>
                                                    <a href="{{ path('annonces_show', {'id': annonce.id}) }}">plus</a></td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2">
                    <h6 id="footer">Copyrights Kiloukoi 2020</h6>
                </div>
            </div>
        </div>
    </div>


</div>



{% endblock %}

{% block javascripts %}
        {{ parent() }}

         <script>
          $(document).ready(function(){
            //$("#vehicule").hide();
            $("#deposerAnnonce").click( function() {
              //get id
              var idAnnonce = $( "#selectAnnonceType option:selected" ).attr('value');
              var isuser = $(this).attr('iduser');
              window.location.href = "/annonces/new?categorie=" + idAnnonce + "&user=" + isuser;
              //redirect
            })
          })
         </script>


    {% endblock %}