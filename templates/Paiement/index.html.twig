{% extends 'base.html.twig' %}

{% block title %}Paiement{% endblock %}

{% block body %}

<div class="container-fluid">

        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <form method="post" class="card-body">
                        <div class="form-group">
                            <input type="text" name="nom"  placeholder="Votre nom" class="form-control e-mai" required autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="prenom"  placeholder="Votre prenom" class="form-control e-mai" required autofocus>
                        </div>
        
                        <div class="form-group">
                            <input type="text" name="num_card" class="form-control" placeholder="Numeros de cart" required>
                        </div>

                        <div class="form-group">
                            <input type="text" name="epx_date" class="form-control" placeholder="Date d'éxpiration" required>
                        </div>

                        <div class="form-group">
                            <input type="text" name="cvv_num" class="form-control" placeholder="Numéros CVV" required>
                        </div>
                        
                        <div class="form-group">
                            <button class="btn btn-success btn-block" style="background-color: #FF4500;border-color: #FF4500;" type="submit"><img src="{{ asset('image/mangopay.png') }}" class="mr-2 float-left" style="height: 25px">Payer
                            </button>
                        </div>
        
                        <div class="row">
                            
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="my-3 text-center">
            
                
            <p>
                <span>Nouveau sur kiloukoi ?</span>
                <strong>
                    <a class="text-dark" style="text-decoration: underline"></a>
                    <button class="btn btn-link"  data-toggle="modal" data-target="#modalUser">Créez votre compte</button>
                </strong>
            </p>
        </div>
</div>


<!-- Modal -->
<div class="modal fade" id="modalUser" tabindex="-1" role="dialog" aria-labelledby="modalUserLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalUserLabel">Vous êtes?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                
            </div>
        </div>
    </div>
</div>

{% endblock %}
