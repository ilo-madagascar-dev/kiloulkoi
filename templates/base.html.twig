<!DOCTYPE html>
<html  lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        <link href="{{ asset('bootstrap/css/bootstrap.min.css') }}" rel="stylesheet"/>
        <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
        <!-- <link rel="stylesheet" href="{{ asset('fontawesome/css/all.min.css') }}" /> -->

        <!-- Alertify CSS -->
        <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/css/alertify.min.css"/>
        <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/css/themes/default.min.css"/>
        <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/css/themes/semantic.min.css"/>
        <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/css/themes/bootstrap.min.css"/>
        <!-- Alertify CSS -->

        <link href="{{ asset('css/style.css') }}" rel="stylesheet"/>

        <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">

        {% block stylesheets %}{% endblock %}
    </head>

    <body class="d-flex flex-column  min-vh-100" style="background-color: #e6e6e6e0;">
        <header style="height: 70px;">
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" style="min-height: 70px">
                {#
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#toggleNav" aria-controls="toggleNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                #}

                <button class="navbar-toggler mr-2" type="button" data-toggle="collapse" data-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="navbar-brand text-success mr-auto" href="{{ path('accueil') }}">
                    <img src="{{ asset('image/kiloukoi.png') }}" class="mb-2" alt="Kiloukoi" style="height: 20px">
                </a>

                <div class="collapse navbar-collapse" id="navbarToggler">
                    <div class="m-auto row">
                        <form class="d-inline col py-4 py-lg-0" action="{{ path('annonces_filter') }}" method="POST" >
                            <div class="input-group">
                                <input class="form-control" type="search" name="titre" placeholder="Recherche" aria-label="Recherche">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-success" >
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                        <div class="d-inline col-6 py-4 py-lg-0">
                            <a class="btn btn-block btn-success" href="{{ path('annonces_depos') }}">Déposer une annonce</a>
                        </div>
                    </div>
                </div>

                {% if not app.user %}
                    <ul class="navbar-nav ml-auto left-menu pt-1">
                        <li class="nav-item">
                            <a class="nav-link"  href="{{ path('securitylogin') }}">
                                <i class="mr-1 fa fa-user"></i> Se Connecter
                            </a>
                        </li>
                    </ul>
                {% endif  %}

                {% if app.user %}
                    <ul class="navbar-nav ml-auto left-menu pt-1" style="flex-direction: row;">
                        <li class="nav-item dropdown notifications-container">
                            <a class="nav-link pt-0 text-white nav-icon text-center" id="btn-notifications" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="d-block fa fa-bell"></i>
                                <small class="d-none unread">0</small>
                                <span class="small">Notifications</span>
                            </a>

                            <div class="dropdown-menu small">
                                <div class="notification-head text-light bg-success py-1 pl-3">
                                    <strong>Notifications</strong>
                                </div>
                                <div class="list-group">
                                </div>
                            </div>
                        </li>

                        <li class="nav-item text-center mr-1">
                            <a href="{{ path('annonces_favoris') }}" class="nav-link pt-0 text-white nav-icon favoris">
                                <i class="d-block fa fa-heart" ></i>
                                <span class="small">Favoris</span>
                            </a>
                        </li>
                        <li class="nav-item text-center mr-1">
                            <a href="{{ path('conversation_index') }}" class="nav-link pt-0 text-white nav-icon messages">
                                <i class="d-block fa fa-envelope" ></i>
                                <span class="d-none unread">0</span>
                                <span class="small">Messages</span>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link p-0 dropdown-toggle text-white" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="p-1 d-none badge notifications" style="position: absolute;right:.25rem;">
                                    <i class="fas fa-exclamation-triangle"></i>
                                </span>
                                {% if app.user.avatar %}
                                    <img src="{{ asset('uploads/avatar/') ~ app.user.avatar }}" alt="Avatar de l'utilisateur" class="bg-white rounded-circle" style="width: 40px;height: 40px;">
                                {% else %}
                                    <img src="{{ asset('image/img-add.png') }}" alt="Avatar de l'utilisateur" class="bg-white rounded-circle" style="width: 40px;height: 40px;">
                                {% endif %}
                            </a>
                            <div class="dropdown-menu shadow dropdown-menu-right" aria-labelledby="userDropdown" style="position: absolute;text-align: center;">
                                <a class="dropdown-item" href="{{ path('user_profil') }}">
                                    <span>Profil</span>
                                    <span class="p-1 d-none badge notifications" style="position: absolute;right: 1rem">
                                        <i class="fas fa-exclamation-triangle"></i>
                                    </span>
                                </a>
                                <a class="dropdown-item" href="{{ path('mes_annonces_index') }}">Mes Annonces</a>
                                <a class="dropdown-item" href="{{ path('location_en_cours') }}">Locations en cours</a>
                                {# <a class="dropdown-item" href="{{ path('annonces_favoris') }}">Mes Favoris</a> #}

                                <div class="dropdown-divider"></div>

                                <a class="dropdown-item" href="{{ path('abonnement_index') }}">Abonnements</a>
                                <a class="dropdown-item" href="{{ path('compte_facture') }}">Mes Factures</a>
                                {% if app.session.get('wallet') %}
                                    {% for portfelle in app.session.get('wallet') %}
                                        <a class="dropdown-item pr-1" href="{{ path('compte_portefeuille') }}">Mon Portefeuille <strong class="ml-1 text-success text-right">{{ (portfelle.Balance.Amount/100) | number_format(2 , ',', '.') }} €</strong> </a>
                                    {% endfor %}
                                {% else %}
                                    <a class="dropdown-item pr-1" href="{{ path('compte_portefeuille') }}">Mon Portefeuille  <strong class="ml-1 text-success text-right">0.00 €</strong></a>
                                {% endif %}

                                <div class="dropdown-divider"></div>

                                <a class="dropdown-item"  href="{{ path('security_logout') }}">
                                    <i class="mr-1 fa fa-logout"></i> Se déconnecter
                                </a>
                            </div>
                        </li>
                    </ul>
                {% endif %}

            </nav>
        </header>

        <main class="mb-4 flex-fill">
            <div aria-live="polite" aria-atomic="true" style="position: relative;">
                <!-- Position it -->
                <div id="pop-up" style="position: absolute; top: 0; right: 0;">

                </div>
            </div>

            <div class="container-fluid">
                <div id="bg" style="position:absolute;z-index:-1;left:0;height:375px;"></div>

                <center class="pt-1">
                    <a href="{{ path('accueil') }}">
                        <img src="{{ asset('image/logo.png') }}" class="mb-3" style="height: 120px;width: auto;" >
                    </a>
                    <h1 class="text-center text-white" style="font-size: 1.4rem;"><strong>N'achetez que le nécessaire, pour <span class="slogan-animation text-success">le reste</span> il y a Kiloukoi</strong></h1>
                </center>
            </div>

            <div class="container-fluid"  style="max-width: 1500px;">
                {% block body %}{% endblock %}
            </div>
        </main>

        <footer class="align-items-end">
            <div class="container-fluid">
                <div class="row py-2 border-top border-bottom border-primary bg-white">
                    <div class="col text-center">
                        <p class="m-0" style="font-size: 1.5rem">
                            <a href="#" class="mx-3"><i class="fab fa-twitter text-info" aria-hidden="true"></i></a>
                            <a href="#" class="mx-3"><i class="fab fa-facebook" aria-hidden="true"></i></a>
                            <a href="#" class="mx-3"><i class="fab fa-instagram text-warning" aria-hidden="true"></i></a>
                            <a href="#" class="mx-3"><i class="fa fa-envelope text-secondary" aria-hidden="true"></i></a>
                        </p>
                    </div>
                </div>

                <div class="row pt-3 bg-white">
                    <div class="col-12 col-sm-6 col-md-3">
                        <ul class="nav flex-column mb-3">
                            <li class="nav-item">
                                <strong class="nav-link pt-0" style="font-size: 1.2rem">A propos</strong>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pt-0" href="#">Qui sommes-nous ?</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pt-0" href="#">Nous rejoindre</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pt-0" href="#">Acteur responsable de l'économie française</a>
                            </li>
                        </ul>
                    </div>

                    <div class="col-12 col-sm-6 col-md-3">
                        <ul class="nav flex-column mb-3">
                            <li class="nav-item">
                                <strong class="nav-link pt-0" style="font-size: 1.2rem">Informations</strong>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pt-0" href="#">Condition générale d'utilisation</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pt-0" href="#">Référencement</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pt-0" href="#">Condition générale de vente</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pt-0" href="#">Vie privé/cookies</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pt-0" href="#">Critère de classement</a>
                            </li>
                        </ul>
                    </div>

                    <div class="col-12 col-sm-6 col-md-3">
                        <ul class="nav flex-column mb-3">
                            <li class="nav-item">
                                <strong class="nav-link pt-0" style="font-size: 1.2rem">Nos solutions pro</strong>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pt-0" href="#">Professionnel de l'immobilier</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pt-0" href="#">Vos recrutements</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pt-0" href="#">Professionnel de l'auto</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pt-0" href="#">Autres solutions professionnelles</a>
                            </li>
                        </ul>
                    </div>

                    <div class="col-12 col-sm-6 col-md-3">
                        <ul class="nav flex-column mb-3">
                            <li class="nav-item">
                                <strong class="nav-link pt-0" style="font-size: 1.2rem">Des questions ?</strong>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pt-0" href="#">Aides</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pt-0" href="#">Service de paiement sécurisé et la livraison</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pt-0" href="#">Demandez conseil à la Communauté</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="row border-top border-primary bg-white">
                    <div class="col text-right py-2">
                        <img src="{{ asset('image/mangopay_power.png') }}" alt="Mangopay copyright" class="w-auto"  style="height: 40px">
                    </div>
                </div>

                {#
                <div class="row border-top border-primary bg-white">
                    <div class="col text-center py-2">
                        Copyright 2020
                    </div>
                </div>
                #}
            </div>
        </footer>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="{{ asset('/bootstrap/js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('/js/base.js') }}"></script>
            <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>

            {% if app.user %}
                <script>
                    var init_url  = "{{ path('notification_init') }}";
                    var heart_url = "{{ path('annonces_heart', {id: 0}) }}";
                    var notif_url = "{{ path('notification_redirect', {notification: 0}) }}";
                </script>
                <script src="{{ asset('/js/user.js') }}"></script>
            {% endif %}
        {% endblock %}
    </body>
</html>
