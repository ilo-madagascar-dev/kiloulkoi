{% extends 'base.html.twig' %}

{% block title %}Profile - {{ app.user.nom | capitalize }}{% endblock %}

{% block body %}

    <div class="container-fluid" style="max-width: 1500px;">
        <div id="bg" style="height:250px;"></div>
        
        <div class="row">
            <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 col-sm-12 bg-white rounded pb-3" style="margin-top: 50px;;">
                <div class="text-center">
                    <img src="{{ asset('image/logo-fond-blanc.png') }}" class="" alt="" style="height: 150px;width:auto;margin-top:-50px">
                </div>

                <div class="card" style="min-height: calc(100vh - 310px);">
                    <div class="card-body">
                        <div class="card-title">
                            <h2 class="text-success text-center">Mes infos</h2>
                        </div>

                        <div class="row">
                            <div class="col-lg-6 col-md-12">
                                <table class="table table-borderless table-sm">
                                    <tr>
                                        <td style="width: 120px"><strong>Nom :</strong></td>
                                        <td>{{ app.user.nom }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Prénom :</strong></td>
                                        <td>{{ app.user.prenom }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Mail :</strong></td>
                                        <td>{{ app.user.email }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Pseudo :</strong></td>
                                        <td>{{ app.user.pseudo }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Téléphone :</strong></td>
                                        <td>{{ app.user.telephone }}</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Ville :</strong></td>
                                        <td>{{ app.user.ville }} - {{ app.user.rue }}  ({{ app.user.cp }})</td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-lg-6 col-md-12 text-center">
                                <p><strong>Avatar</strong></p>
                                {% if app.user.avatar %}
                                    <img src="{{ asset('uploads/avatar/') ~ app.user.avatar }}" alt="" class="img-fluid rounded">
                                {% else %}
                                    <img src="{{ asset('image/img-add.png') }}" alt="" class="img-fluid rounded">
                                {% endif %}
                            </div>
                            <div class="col-12 mt-3 d-flex justify-content-center">
                                <a href="{{ path('user_edit', { id: app.user.id }) }}" class="btn btn-primary btn-block w-50">Modifier votre compte</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}