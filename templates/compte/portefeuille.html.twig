						<input type="text" name="id" value="">
					</div>
					<div class="modal-footer">
			            <button type="submit" class="btn btn-primary">Désactiver</button>
			            <button type="button" class="btn btn-default" data-dismiss="modal">Annuler
			            </button>
			        </div>
		        </form>
			</div>
